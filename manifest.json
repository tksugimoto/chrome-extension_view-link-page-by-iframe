{
	"name": "リンク先を見る",
	"version": "0.1",
	"manifest_version": 2,

	"description": "",

	"permissions": [
		"*://*/*",
		"contextMenus",
		"activeTab"
	],

	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},

	"content_scripts": [{
		"matches": [
			"*://*/*"
			],
		"js": [
			"content_script.js"
		]
	}]
}